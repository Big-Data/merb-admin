              <div class="form-row page">
                <div>
                  <%= text_field(property.name, :class => "vDateField", :label => property.field.capitalize.gsub('_', ' '), :value => eval("@instance.#{property.field}").strftime("%Y-%m-%d")) %>
                  <p class="help">
                    <%= !property.nullable? ? "Required." : "Optional." %>
                  </p>
                </div>
              </div>
